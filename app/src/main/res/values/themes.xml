<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PoemPoet" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:ems">10</item>
        <item name="fontFamily">@font/reza_zulmi_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/dark_purple</item>
        <item name="colorControlActivated">@color/dark_purple</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dialog.Alert.TestDialogTheme">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="ProfileStyle">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/red</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:ems">10</item>
    </style>

    <style name="StyleForMainText">
        <item name="fontFamily">@font/reza_zulmi_sans</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyleAddPoem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textColorHint">@color/dark_purple</item>
        <item name="backgroundTint">@color/dark_purple</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/reza_zulmi_sans</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>